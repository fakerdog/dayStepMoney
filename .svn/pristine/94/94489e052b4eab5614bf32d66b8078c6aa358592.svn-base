/* pages/unlockedstep/unlockedstep.wxss */
page{
background-color: #eee;
}

.head {
  font-size: 32rpx;
  width: 100%;
  background-color: white;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.withdetail-head {
  height: 176rpx;
  background-color: white;
  text-align: center;
  border-top: 0.5rpx solid #d3d3d3;
}

.withdetail-head-img {
  margin: 0 auto;
  width: 100rpx;
  margin-top: 8rpx;
}

.withdetail-head-ideal {
  color: #222;
  font-size: 32rpx;
  margin: 16rpx 0rpx 20rpx 0rpx;
}

.withdetail-head-money {
  font-size: 32rpx;
  margin-left: 10rpx;
}

.share-img-block {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.share-img-btn {
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: none;
  padding: 0rpx 10rpx;
}

.share-img-btn image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 5rpx;
}

.share-img-btn text {
  font-size: 32rpx;
  font-weight: normal;
}

.locklist {
  font-size: 29rpx;
  /* margin-top: 30rpx; */
  margin: 30rpx auto 0 auto;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.lockitem {
  /* margin-left: 50rpx; *//* margin-bottom: 40rpx; *//* width: 650rpx; */
  margin-bottom: 15rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid gainsboro;
}

.lockitem .lockdatadesc {
  width: 130rpx;
  text-align: right;
}

.lockitem .btnview {
  width: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}

.lockitembtn {
  font-size: 28rpx;
  height: 60rpx;
  width: 310rpx;
  padding: 0rpx 10rpx;
  line-height: 60rpx;
  border: none;
}

.item-steps {
  font-weight: bold;
}

.item-steps-desc {
  margin: 30rpx 0rpx 40rpx 0rpx;
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}

.footerdraw {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  text-align: center;
  background-color: #FFF;
  color:#3cb570;
  font-weight: bold;
  text-decoration: underline;
  border: none;
}

/**蒙层-start**/

.mask {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  overflow: hidden;
  background: rgba(000, 000, 000, 0.3);
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modalcontent {
  border-radius: 25rpx;
  font-size: 32rpx;
  width: 580rpx;
  height: auto;
  background: rgb(255, 255, 255);
}

.modalcontent .modaltitle {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
  border-bottom-color: gainsboro;
  font-weight: bold;
}

.modaltext {
  height: 200rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modaltextred {
  height: 50rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: red;
}

.modalbtn {
  display: flex;
  height: 100rpx;
  justify-content: space-around;
  align-items: center;
}

.modalbtn button {
  font-size: 29rpx;
  width: 200rpx;
  height: 70rpx;
  border: none;
}

/**蒙层-end**/

/*分享弹出层样式-start*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  overflow: hidden;
  background-color: #a1a1a1;
}

.drawer_box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  position: fixed;
  bottom: 0px;
  z-index: 1001;
  text-align: center;
  background-color: #a1a1a1;
}

.drawer_content_box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #a1a1a1;
}

.drawer_content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.drawer_content_image {
  width: 80%;
  height: 100%;
}

.drawer_content_image2 {
  margin-top: 100rpx;
  width: 100%;
  height: 80%;
}

.drawer_btn_block {
  width: 100%;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}

.drawer_btn_block button {
  height: 40px;
  line-height: 40px;
  margin-bottom: 5px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border: none;
}

.save-img {
  background-color: #2ba246;
  color: #fff;
}

.drawer_content_canvas {
  margin-top: 450px;
  width: 1305px;
  height: 1501px;
}

.drawer_content_canvas_abs {
  width: 1305px;
  height: 1501px;
  position: fixed;
  left: 100000px;
}

.hidden-view {
  display: none;
}

.drawer_monthcontent_canvas {
  margin-top: 450px;
  width: 1305px;
  height: 1920px;
}

.drawer_monthcontent_canvas_abs {
  width: 1305px;
  height: 1920px;
  position: fixed;
  left: 100000px;
}

/*分享弹出层样式-end*/


/*红包弹出层样式-start*/
.redPackagemask {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  overflow: hidden;
  background: rgba(000, 000, 000, 0.3);
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modalDlg {
  width: 90%;
  height: 90%;
  z-index: 9999;
  background-color: #fff;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button::after {
  content: "";
  border: none;
}

.btnimg {
  width: 200rpx;
  height: 200rpx;
  z-index: 10000;
  border-radius: 50%;
  margin-top: 156rpx;
}

.btnimg button {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: 160rpx 160rpx;
  background-repeat: no-repeat;
  border: none;
}

.backimg {
  width: 90%;
  height: 90%;
  position: absolute;
}
.miniicon {
  width: 70%;
  height: 200rpx;
  z-index: 10000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  color: yellow;
}

.miniiconitem {
  width: 120rpx;
  height: 120rpx;
  z-index: 10000;
  border-radius: 50%;
}

.miniiconitem image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: 160rpx 160rpx;
  background-repeat: no-repeat;
  border: none;
}

.regbagtext {
  width: 100%;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
  color: yellow;
  margin-top: 50rpx;
}
.regbagtext .descp1 {
  font-size:40rpx;
  text-align: center;
  width: 100%;
}
.regbagtext .descp {
  font-size:40rpx;
  margin-top:50rpx;
  text-align: center;
  width: 100%;
}


.popuptext {
  width: 50%;
  z-index: 10000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  color: yellow;
  margin-top: 150rpx;
}
.popuptext view {
  font-size: 24rpx;
  color: yellow;
  text-align: center;
  height: 30rpx;
}


.closetext {
  border-radius: 50rpx;
  width: 100rpx;
  text-align: center;
  background-color: rgba(000, 000, 000, 0.3);
  font-size: 20rpx;
  color: yellow;
  padding-bottom: 6rpx;
}
/*红包弹出层样式-end*/