.promotion-container{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #E8E8E8;
}
.withdetail-head{
  height: 480rpx;
  background-color: white;
  text-align: center;
  border-top: 0.5rpx solid #D3D3D3;
}
.withdetail-head-img{
  margin: 0 auto;
  width: 140rpx;
  margin-top: 50rpx;
}
.withdetail-head-ideal{
  color: #D3D3D3;
  font-size: 28rpx;
  margin: 20rpx auto;
  font-weight: 700;
}
.withdetail-head-money{
  color: red;
  font-size: 70rpx;
  font-weight: 700;
}
.draw-suij{
  margin-left: 5rpx;
  font-size: 25rpx;
}
.withdetail-head-ye{
  color:#DCDCDC;
  font-size: 36rpx;
  margin: 20rpx auto;
}

.withdetail-desc{
  font-size: 26rpx;
  color: #8B8682;
  text-indent: 30rpx;
  margin-top: 30rpx;
  font-weight: 500;
  line-height: 40rpx;
}
.withdetail-green{
  color: #32CD32;
  font-weight: 600;
}
.withdetail-con{
  background-color: white;
  height: 100rpx;
  margin-top: 40rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-indent: 30rpx;
  display: flex;
  justify-content: left;
}
.withdetail-text{
  height: inherit;
  display: inline-block;
}
.inp{
  height: inherit;
  text-align: center;
  display: inline-block;
  line-height: 100rpx;
  width: 400rpx;
}
.withdetail-bottom{
  width: 100%;
  position:fixed;
  bottom: 40rpx;
  z-index: 2;
  text-align: center;
  margin: 0 auto;
}
.withdetail-button{
  width: 50%;
  text-align: center;
  background-color: #8B8386;
  border-radius: 50rpx;
}
.withdetail-button.disabled {
  pointer-events: none;
  background: #b07a7b;
  color: #ccc;
}
.withdetail-button.disabled::after {
  border-bottom-color: #b07a7b;
}
